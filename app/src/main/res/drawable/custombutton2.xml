<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="30dp" />
            <stroke android:width="1dp" android:color="#ff8f9184" />
            <gradient  android:angle="-90"  android:startColor="#ff7b8069" android:endColor="#ffabada1"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="30dp" />
            <stroke android:width="1dp" android:color="#ff8f9185" />
            <solid  android:color="#ffabb09a"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="30dp" />
            <stroke android:width="1dp" android:color="#ff8f9184" />
            <gradient  android:angle="-90"  android:startColor="#ffd5d5d5" android:endColor="#ffabb09b" />
        </shape>
    </item>


</selector>