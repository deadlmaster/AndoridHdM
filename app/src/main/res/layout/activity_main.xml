<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    >

    <TextView android:text="@string/welcome_message" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/Coin_Main"
        android:layout_marginTop="190dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center|top"
        android:background="@drawable/dollar178" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/main_expenditure"
        android:layout_gravity="center|top"
        android:background="@drawable/basic16"
        android:layout_toEndOf="@+id/main_saving"
        android:layout_alignTop="@+id/main_income"
        android:layout_toRightOf="@+id/main_saving" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/main_income"
        android:layout_gravity="center|top"
        android:background="@drawable/basic16"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/Coin_Main"
        android:layout_toLeftOf="@+id/main_saving"
        android:layout_toStartOf="@+id/main_saving" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/main_credit"
        android:layout_gravity="center|top"
        android:background="@drawable/basic16"
        android:layout_toStartOf="@+id/Coin_Main"
        android:layout_alignTop="@+id/main_debts"
        android:layout_toLeftOf="@+id/Coin_Main" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/main_debts"
        android:layout_gravity="center"
        android:background="@drawable/basic16"
        android:layout_toEndOf="@+id/textView"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/textView" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/main_saving"
        android:layout_gravity="center"
        android:background="@drawable/basic16"
        android:layout_marginBottom="37dp"
        android:layout_above="@+id/main_credit"
        android:layout_centerHorizontal="true" />



</RelativeLayout>